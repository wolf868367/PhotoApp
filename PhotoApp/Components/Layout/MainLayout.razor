@inherits LayoutComponentBase

<PageTitle>PhotoApp - Фотоцентр</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [Inject]
    private AuthService AuthService { get; set; } = null!;

    protected override void OnInitialized()
    {
        Console.WriteLine($"MainLayout - User authenticated: {AuthService.IsAuthenticated}");
    }
}