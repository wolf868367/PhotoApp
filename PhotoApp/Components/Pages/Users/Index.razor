@page "/users"
@using PhotoApp.Models
@using System.ComponentModel.DataAnnotations

<PageTitle>PhotoApp - Пользователи</PageTitle>

<div class="container mt-4">
    <BackButton FallbackUrl="/" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Управление пользователями</h2>
        <button class="btn btn-success" @onclick="ShowAddUser">
            <i class="oi oi-plus me-2"></i>Добавить пользователя
        </button>
    </div>

    @if (!AuthService.IsAuthenticated || !AuthService.IsAdmin)
    {
        <div class="alert alert-warning text-center">
            <h4>Недостаточно прав</h4>
            <p>Для управления пользователями требуется роль администратора.</p>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success">@successMessage</div>
        }

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="oi oi-people me-2"></i>Список пользователей
                    <span class="badge bg-primary">@users.Count</span>
                </h5>
            </div>
            <div class="card-body p-0">
                @if (isLoading)
                {
                    <div class="text-center p-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Загрузка...</span>
                        </div>
                        <p class="mt-2">Загрузка пользователей...</p>
                    </div>
                }
                else if (users.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Логин</th>
                                    <th>Роль</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in users)
                                {
                                    <tr>
                                        <td>
                                            <strong>@user.Login</strong>
                                        </td>
                                        <td>
                                            <span class="badge @GetRoleBadgeClass(user.Role?.Name)">
                                                @GetRoleName(user.Role?.Name)
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1"
                                                    @onclick="() => EditUser(user)"
                                                    title="Редактировать">
                                                <i class="oi oi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => DeleteUser(user)"
                                                    title="Удалить">
                                                <i class="oi oi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="oi oi-people display-1 text-muted mb-3"></i>
                        <h4>Пользователи не найдены</h4>
                        <p class="text-muted">Нет зарегистрированных пользователей.</p>
                        <button class="btn btn-primary" @onclick="ShowAddUser">
                            <i class="oi oi-plus me-2"></i>Добавить первого пользователя
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Модальное окно добавления/редактирования пользователя -->
        @if (showUserModal)
        {
            <div class="modal show d-block" style="background: rgba(0,0,0,0.5)">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">@(editingUser?.Id > 0 ? "Редактирование пользователя" : "Добавление пользователя")</h5>
                            <button type="button" class="btn-close" @onclick="CloseUserModal"></button>
                        </div>
                        <div class="modal-body">
                            <EditForm Model="userModel" OnValidSubmit="SaveUser">
                                <DataAnnotationsValidator />

                                <div class="mb-3">
                                    <label class="form-label">Логин *</label>
                                    <InputText @bind-Value="userModel.Login" class="form-control" />
                                    <ValidationMessage For="@(() => userModel.Login)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Пароль @(editingUser == null ? "*" : "")</label>
                                    <InputText type="password" @bind-Value="userModel.Password" class="form-control" />
                                    @if (editingUser == null)
                                    {
                                        <ValidationMessage For="@(() => userModel.Password)" />
                                    }
                                    else
                                    {
                                        <div class="form-text">Оставьте пустым, если не хотите менять пароль</div>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Роль *</label>
                                    <InputSelect @bind-Value="userModel.RoleId" class="form-select">
                                        <option value="0">Выберите роль</option>
                                        @foreach (var role in roles)
                                        {
                                            <option value="@role.Id">@GetRoleName(role.Name)</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => userModel.RoleId)" />
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <button type="button" class="btn btn-secondary" @onclick="CloseUserModal">Отмена</button>
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        }
                                        Сохранить
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Inject] private AuthService AuthService { get; set; } = null!;
    [Inject] private DataService DataService { get; set; } = null!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = null!;

    private List<ApplicationUser> users = new();
    private List<Role> roles = new();
    private bool isLoading = true;
    private bool showUserModal = false;
    private bool isSaving = false;
    private ApplicationUser? editingUser = null;
    private UserModel userModel = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated && AuthService.IsAdmin)
        {
            await LoadData();
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            users = await DataService.GetUsersAsync();
            roles = await DataService.GetRolesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка загрузки данных: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAddUser()
    {
        editingUser = null;
        userModel = new UserModel();
        showUserModal = true;
    }

    private void EditUser(ApplicationUser user)
    {
        editingUser = user;
        userModel = new UserModel
        {
            Login = user.Login,
            RoleId = user.RoleId
        };
        showUserModal = true;
    }

    private void CloseUserModal()
    {
        showUserModal = false;
        editingUser = null;
        userModel = new UserModel();
    }

    private async Task SaveUser()
    {
        isSaving = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            if (editingUser?.Id > 0)
            {
                // Редактирование
                editingUser.Login = userModel.Login;
                editingUser.RoleId = userModel.RoleId;

                if (!string.IsNullOrEmpty(userModel.Password))
                {
                    editingUser.Password = userModel.Password;
                }

                await DataService.UpdateUserAsync(editingUser);
                successMessage = "Пользователь успешно обновлен!";
            }
            else
            {
                // Добавление
                var newUser = new ApplicationUser
                {
                    Login = userModel.Login,
                    Password = userModel.Password,
                    RoleId = userModel.RoleId
                };

                await DataService.AddUserAsync(newUser);
                successMessage = "Пользователь успешно добавлен!";
            }

            CloseUserModal();
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка сохранения: {ex.Message}";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task DeleteUser(ApplicationUser user)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить пользователя \"{user.Login}\"?"))
            return;

        try
        {
            await DataService.DeleteUserAsync(user.Id);
            successMessage = "Пользователь успешно удален!";
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка удаления: {ex.Message}";
        }
    }

    private string GetRoleBadgeClass(string? roleName)
    {
        return roleName switch
        {
            "admin" => "bg-danger",
            "operator" => "bg-warning",
            "client" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetRoleName(string? roleName)
    {
        return roleName switch
        {
            "admin" => "Администратор",
            "operator" => "Оператор",
            "client" => "Клиент",
            _ => roleName ?? "Неизвестно"
        };
    }

    public class UserModel
    {
        [Required(ErrorMessage = "Логин обязателен")]
        [StringLength(50, ErrorMessage = "Логин не должен превышать 50 символов")]
        public string Login { get; set; } = string.Empty;

        [StringLength(100, ErrorMessage = "Пароль не должен превышать 100 символов")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Роль обязательна")]
        [Range(1, int.MaxValue, ErrorMessage = "Выберите роль")]
        public int RoleId { get; set; }
    }
}