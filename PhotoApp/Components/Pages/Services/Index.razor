@page "/services"
@using PhotoApp.Models

<PageTitle>PhotoApp - Услуги</PageTitle>

<div class="container mt-4">
    <BackButton FallbackUrl="/" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Управление услугами</h2>
        @if (AuthService.IsAdmin)
        {
            <button class="btn btn-success" @onclick="ShowAddService">
                <i class="oi oi-plus me-2"></i>Добавить услугу
            </button>
        }
    </div>

    @if (!AuthService.IsAuthenticated)
    {
        <div class="alert alert-warning text-center">
            <h4>Требуется авторизация</h4>
            <p>Для просмотра услуг необходимо войти в систему.</p>
            <a href="/login" class="btn btn-primary">Войти</a>
        </div>
    }
    else if (!AuthService.IsOperator && !AuthService.IsAdmin)
    {
        <div class="alert alert-warning text-center">
            <h4>Недостаточно прав</h4>
            <p>Для просмотра услуг требуется роль оператора или администратора.</p>
        </div>
    }
    else
    {
        <!-- Список услуг -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="oi oi-wrench me-2"></i>Список услуг (@services.Count)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Название</th>
                                <th>Базовая цена</th>
                                <th>Описание</th>
                                @if (AuthService.IsAdmin)
                                {
                                    <th>Действия</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in services)
                            {
                                <tr>
                                    <td>
                                        <strong>@service.Name</strong>
                                    </td>
                                    <td>
                                        <strong class="text-success">@service.BasePrice.ToString("C")</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(service.Description))
                                        {
                                            <span class="text-muted">@service.Description</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    @if (AuthService.IsAdmin)
                                    {
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1"
                                                    @onclick="() => EditService(service)"
                                                    title="Редактировать">
                                                <i class="oi oi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => DeleteService(service)"
                                                    title="Удалить">
                                                <i class="oi oi-trash"></i>
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Модальное окно добавления/редактирования услуги -->
        @if (showServiceModal)
        {
            <div class="modal show d-block" style="background: rgba(0,0,0,0.5)">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">@(editingService?.Id > 0 ? "Редактирование услуги" : "Добавление услуги")</h5>
                            <button type="button" class="btn-close" @onclick="CloseServiceModal"></button>
                        </div>
                        <div class="modal-body">
                            <EditForm Model="serviceModel" OnValidSubmit="SaveService">
                                <DataAnnotationsValidator />

                                <div class="mb-3">
                                    <label class="form-label">Название услуги</label>
                                    <InputText @bind-Value="serviceModel.Name" class="form-control" />
                                    <ValidationMessage For="@(() => serviceModel.Name)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Базовая цена</label>
                                    <InputNumber @bind-Value="serviceModel.BasePrice" class="form-control" />
                                    <ValidationMessage For="@(() => serviceModel.BasePrice)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Описание</label>
                                    <InputTextArea @bind-Value="serviceModel.Description" class="form-control" rows="3" />
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <button type="button" class="btn btn-secondary" @onclick="CloseServiceModal">Отмена</button>
                                    <button type="submit" class="btn btn-primary">Сохранить</button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Inject]
    private AuthService AuthService { get; set; } = null!;

    [Inject]
    private DataService DataService { get; set; } = null!;

    private List<Service> services = new();
    private bool showServiceModal = false;
    private Service? editingService = null;
    private ServiceModel serviceModel = new();

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated && (AuthService.IsOperator || AuthService.IsAdmin))
        {
            await LoadServices();
        }
    }

    private async Task LoadServices()
    {
        try
        {
            services = await DataService.GetServicesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки услуг: {ex.Message}");
            // Временно заглушка
            services = GetTestServices();
        }
    }

    private void ShowAddService()
    {
        editingService = null;
        serviceModel = new ServiceModel();
        showServiceModal = true;
        StateHasChanged();
    }

    private void EditService(Service service)
    {
        editingService = service;
        serviceModel = new ServiceModel
        {
            Name = service.Name,
            BasePrice = service.BasePrice,
            Description = service.Description ?? ""
        };
        showServiceModal = true;
        StateHasChanged();
    }

    private void CloseServiceModal()
    {
        showServiceModal = false;
        editingService = null;
        serviceModel = new ServiceModel();
        StateHasChanged();
    }

    private async Task SaveService()
    {
        // Здесь будет логика сохранения в базу
        Console.WriteLine($"Сохранение услуги: {serviceModel.Name}");

        // Временно просто закрываем модальное окно
        CloseServiceModal();
        await LoadServices(); // Перезагружаем список
    }

    private async Task DeleteService(Service service)
    {
        // Здесь будет логика удаления
        Console.WriteLine($"Удаление услуги: {service.Name}");
        await LoadServices(); // Перезагружаем список
    }

    // Временные тестовые данные
    private List<Service> GetTestServices()
    {
        return new List<Service>
        {
            new Service { Id = 1, Name = "Печать 10x15", BasePrice = 15.00m, Description = "Печать фотографий 10x15 см" },
            new Service { Id = 2, Name = "Печать 15x21", BasePrice = 25.00m, Description = "Печать фотографий 15x21 см" },
            new Service { Id = 3, Name = "Проявка пленки 35mm", BasePrice = 100.00m, Description = "Проявка стандартной фотопленки 35mm" },
            new Service { Id = 4, Name = "Фото на документы", BasePrice = 200.00m, Description = "Фото 3x4 для документов" }
        };
    }

    public class ServiceModel
    {
        [Required(ErrorMessage = "Название обязательно")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Цена обязательна")]
        [Range(0.01, double.MaxValue, ErrorMessage = "Цена должна быть больше 0")]
        public decimal BasePrice { get; set; }

        public string Description { get; set; } = string.Empty;
    }
}