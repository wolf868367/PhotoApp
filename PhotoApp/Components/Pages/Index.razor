@code {
    [Inject]
    private AuthService AuthService { get; set; } = null!;

    [Inject]
    private NavigationManager Navigation { get; set; } = null!;

    [Inject]
    private DataService DataService { get; set; } = null!;

    private int todayOrders = 0;
    private decimal todayRevenue = 0;
    private int pendingOrders = 0;
    private int completedOrders = 0;

    // Статистика для клиентов
    private int myTotalOrders = 0;
    private int myPendingOrders = 0;
    private int myCompletedOrders = 0;
    private decimal myTotalSpent = 0;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated)
        {
            if (AuthService.IsOperator || AuthService.IsAdmin)
            {
                await LoadTodayStats();
            }
            else if (AuthService.IsClient)
            {
                await LoadClientStats();
            }
        }
    }

    private async Task LoadTodayStats()
    {
        try
        {
            var today = DateTime.Today;
            var tomorrow = today.AddDays(1);

            var allOrders = await DataService.GetOrdersAsync();
            var todayOrdersList = allOrders
                .Where(o => o.CreatedAt >= today && o.CreatedAt < tomorrow)
                .ToList();

            todayOrders = todayOrdersList.Count;
            todayRevenue = todayOrdersList.Sum(o => o.TotalAmount);
            pendingOrders = todayOrdersList.Count(o => o.Status == "в работе" || o.Status == "принят");
            completedOrders = todayOrdersList.Count(o => o.Status == "готов" || o.Status == "выдан");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
            todayOrders = 0;
            todayRevenue = 0;
            pendingOrders = 0;
            completedOrders = 0;
        }
    }

    private async Task LoadClientStats()
    {
        try
        {
            if (AuthService.CurrentClient == null) return;

            var allOrders = await DataService.GetOrdersAsync();
            var myOrders = allOrders
                .Where(o => o.ClientId == AuthService.CurrentClient.Id)
                .ToList();

            myTotalOrders = myOrders.Count;
            myPendingOrders = myOrders.Count(o => o.Status == "в работе" || o.Status == "принят");
            myCompletedOrders = myOrders.Count(o => o.Status == "готов" || o.Status == "выдан");
            myTotalSpent = myOrders.Sum(o => o.TotalAmount);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading client stats: {ex.Message}");
            myTotalOrders = 0;
            myPendingOrders = 0;
            myCompletedOrders = 0;
            myTotalSpent = 0;
        }
    }

    private string GetRoleName()
    {
        return AuthService.CurrentUser?.Role?.Name switch
        {
            "admin" => "Администратор",
            "operator" => "Оператор",
            "client" => "Клиент",
            _ => "Пользователь"
        };
    }

    private string GetRoleDescription()
    {
        return AuthService.CurrentUser?.Role?.Name switch
        {
            "admin" => "Полный доступ ко всем функциям системы",
            "operator" => "Управление заказами, продажами и услугами",
            "client" => "Просмотр заказов и личного кабинета",
            _ => "Базовый доступ к системе"
        };
    }

