@page "/products"
@using PhotoApp.Models

<PageTitle>PhotoApp - Товары</PageTitle>

<div class="container mt-4">
    <!-- Кнопка Назад -->
    <BackButton FallbackUrl="/" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Управление товарами</h2>
        @if (AuthService.IsAdmin)
        {
            <button class="btn btn-success" @onclick="ShowAddProduct">
                <i class="oi oi-plus me-2"></i>Добавить товар
            </button>
        }
    </div>

    @if (!AuthService.IsAuthenticated)
    {
        <div class="alert alert-warning text-center">
            <h4>Требуется авторизация</h4>
            <p>Для просмотра товаров необходимо войти в систему.</p>
            <a href="/login" class="btn btn-primary">Войти</a>
        </div>
    }
    else if (!AuthService.IsOperator && !AuthService.IsAdmin)
    {
        <div class="alert alert-warning text-center">
            <h4>Недостаточно прав</h4>
            <p>Для просмотра товаров требуется роль оператора или администратора.</p>
        </div>
    }
    else
    {
        <!-- Список товаров -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="oi oi-basket me-2"></i>Список товаров (@products.Count)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Название</th>
                                <th>Категория</th>
                                <th>Цена продажи</th>
                                <th>Остаток</th>
                                @if (AuthService.IsAdmin)
                                {
                                    <th>Действия</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in products)
                            {
                                <tr>
                                    <td>
                                        <strong>@product.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@product.Category</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@product.SellingPrice.ToString("C")</strong>
                                    </td>
                                    <td>
                                        @if (product.StockQuantity > 10)
                                        {
                                            <span class="badge bg-success">@product.StockQuantity шт.</span>
                                        }
                                        else if (product.StockQuantity > 0)
                                        {
                                            <span class="badge bg-warning">@product.StockQuantity шт.</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Нет в наличии</span>
                                        }
                                    </td>
                                    @if (AuthService.IsAdmin)
                                    {
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1"
                                                    @onclick="() => EditProduct(product)"
                                                    title="Редактировать">
                                                <i class="oi oi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => DeleteProduct(product)"
                                                    title="Удалить">
                                                <i class="oi oi-trash"></i>
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Модальное окно добавления/редактирования товара -->
        @if (showProductModal)
        {
            <div class="modal show d-block" style="background: rgba(0,0,0,0.5)">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">@(editingProduct?.Id > 0 ? "Редактирование товара" : "Добавление товара")</h5>
                            <button type="button" class="btn-close" @onclick="CloseProductModal"></button>
                        </div>
                        <div class="modal-body">
                            <EditForm Model="productModel" OnValidSubmit="SaveProduct">
                                <DataAnnotationsValidator />

                                <div class="mb-3">
                                    <label class="form-label">Название товара</label>
                                    <InputText @bind-Value="productModel.Name" class="form-control" />
                                    <ValidationMessage For="@(() => productModel.Name)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Категория</label>
                                    <InputSelect @bind-Value="productModel.Category" class="form-select">
                                        <option value="">Выберите категорию</option>
                                        <option value="Пленка">Пленка</option>
                                        <option value="Фотоаппарат">Фотоаппарат</option>
                                        <option value="Альбом">Альбом</option>
                                        <option value="Аксессуар">Аксессуар</option>
                                        <option value="Бумага">Бумага</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => productModel.Category)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Цена продажи</label>
                                    <InputNumber @bind-Value="productModel.SellingPrice" class="form-control" />
                                    <ValidationMessage For="@(() => productModel.SellingPrice)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Количество на складе</label>
                                    <InputNumber @bind-Value="productModel.StockQuantity" class="form-control" />
                                    <ValidationMessage For="@(() => productModel.StockQuantity)" />
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <button type="button" class="btn btn-secondary" @onclick="CloseProductModal">Отмена</button>
                                    <button type="submit" class="btn btn-primary">Сохранить</button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Inject]
    private AuthService AuthService { get; set; } = null!;

    [Inject]
    private DataService DataService { get; set; } = null!;

    private List<Product> products = new();
    private bool showProductModal = false;
    private Product? editingProduct = null;
    private ProductModel productModel = new();

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated && (AuthService.IsOperator || AuthService.IsAdmin))
        {
            await LoadProducts();
        }
    }

    private async Task LoadProducts()
    {
        try
        {
            products = await DataService.GetProductsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки товаров: {ex.Message}");
            // Временно заглушка
            products = GetTestProducts();
        }
    }

    private void ShowAddProduct()
    {
        editingProduct = null;
        productModel = new ProductModel();
        showProductModal = true;
        StateHasChanged();
    }

    private void EditProduct(Product product)
    {
        editingProduct = product;
        productModel = new ProductModel
        {
            Name = product.Name,
            Category = product.Category,
            SellingPrice = product.SellingPrice,
            StockQuantity = product.StockQuantity
        };
        showProductModal = true;
        StateHasChanged();
    }

    private void CloseProductModal()
    {
        showProductModal = false;
        editingProduct = null;
        productModel = new ProductModel();
        StateHasChanged();
    }

    private async Task SaveProduct()
    {
        // Здесь будет логика сохранения в базу
        Console.WriteLine($"Сохранение товара: {productModel.Name}");

        // Временно просто закрываем модальное окно
        CloseProductModal();
        await LoadProducts(); // Перезагружаем список
    }

    private async Task DeleteProduct(Product product)
    {
        // Здесь будет логика удаления
        Console.WriteLine($"Удаление товара: {product.Name}");
        await LoadProducts(); // Перезагружаем список
    }

    // Временные тестовые данные
    private List<Product> GetTestProducts()
    {
        return new List<Product>
        {
            new Product { Id = 1, Name = "Фотопленка Kodak Gold 200", Category = "Пленка", SellingPrice = 350.00m, StockQuantity = 50 },
            new Product { Id = 2, Name = "Фотопленка Fuji Superia 400", Category = "Пленка", SellingPrice = 380.00m, StockQuantity = 30 },
            new Product { Id = 3, Name = "Фотоальбом 100 фото", Category = "Альбом", SellingPrice = 450.00m, StockQuantity = 20 },
            new Product { Id = 4, Name = "Фоторамка 15x21", Category = "Аксессуар", SellingPrice = 150.00m, StockQuantity = 15 }
        };
    }

    public class ProductModel
    {
        [Required(ErrorMessage = "Название обязательно")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Категория обязательна")]
        public string Category { get; set; } = string.Empty;

        [Required(ErrorMessage = "Цена обязательна")]
        [Range(0.01, double.MaxValue, ErrorMessage = "Цена должна быть больше 0")]
        public decimal SellingPrice { get; set; }

        [Required(ErrorMessage = "Количество обязательно")]
        [Range(0, int.MaxValue, ErrorMessage = "Количество не может быть отрицательным")]
        public int StockQuantity { get; set; }
    }
}