@code {
    [Inject]
    private AuthService AuthService { get; set; } = null!;

    [Inject]
    private NavigationManager Navigation { get; set; } = null!;

    private string GetRoleName()
    {
        return AuthService.CurrentUser?.Role?.Name switch
        {
            "admin" => "Администратор",
            "operator" => "Оператор",
            "client" => "Клиент",
            _ => "Пользователь"
        };
    }

    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/login");
    }
}